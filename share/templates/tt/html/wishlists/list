[% USE HTML %]
[% page.title = c.localize('PAGE_TITLE_WISHLISTS') %]
[% INCLUDE includes/errors %]

[% IF wishlists.count %]
	[% WHILE (wishlist = wishlists.next) %]
        <h2><a href="[% c.uri_for_resource('mango/wishlists', 'view', [wishlist.id]) %]/">[% wishlist.name %]</a></h2>
        <p>
            [% HTML.escape(wishlist.description) or c.localize('NO_DESCRIPTION_AVAILABLE') %]
        </p>
	[% END %]
[% ELSE %]
    <p>[% c.localize('NO_WISHLISTS') %]</p>
[% END %]
